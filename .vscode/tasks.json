{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Tweego",
            "type": "shell",
            "isBackground": true,
            "command": "tweego -o ectocomp25.html source",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "launch",
            "type": "process",
            "command": "explorer",
            "windows": {
                "command": "explorer.exe"
            },
            "args": [
                "ectocomp25.html"
            ]
        },
        {
            "label": "Build",
            "dependsOn": [
                "Tweego",
                "launch"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}